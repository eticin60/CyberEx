rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      
      // Wallet subcollection
      match /wallet/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // Futures wallet subcollection
      match /futures_wallet/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // Settings subcollection
      match /settings/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // Favorites subcollection
      match /favorites/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // History subcollection
      match /wallet/{walletDoc}/spot_history/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      match /futures_wallet/{walletDoc}/futures_history/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Coins collection - public read, admin write
    match /coins/{coinId} {
      allow read: if true; // Public read for market data
      allow write: if isAdmin();
    }
    
    // Global settings - admin only
    match /global_settings/{document=**} {
      allow read: if true; // Public read for app settings
      allow write: if isAdmin();
    }
    
    // Stories/Promotions - public read, admin write
    match /stories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /promotions/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // News - public read, admin write
    match /news/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Chat messages - users can only read/write their own or group chats
    match /chat/{chatId} {
      allow read: if isAuthenticated() && (
        resource.data.participants.hasAny([request.auth.uid]) ||
        resource.data.type == 'global'
      );
      allow write: if isAuthenticated() && (
        resource.data.participants.hasAny([request.auth.uid]) ||
        resource.data.type == 'global'
      );
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
